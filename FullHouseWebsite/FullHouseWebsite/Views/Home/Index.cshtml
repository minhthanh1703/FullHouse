@using FullHouseWebsite.Models;
@model List<tbl_District>

<link href="~/Content/mycss/cssBootstrap.css" rel="stylesheet" />
<!-- Bootstrap CSS -->
<link href="~/Content/mycss/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
@*<script src="~/Scripts/myScipts/jquery-3.3.1.slim.min.js"></script>*@
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/myScipts/popper.min.js"></script>
<script src="~/Scripts/myScipts/bootstrap.min.js"></script>
@{
    Layout = "~/Views/Layout/FullHouseLayout.cshtml";
    ViewBag.Title = "Home Page";
}

@section Banner{
    <div class="container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="@Url.Content("~/Content/image/banner_9.jpg")" class="d-block w-100 img-thumbnail" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content("~/Content/image/banner_10.jpg")" class="d-block w-100 img-thumbnail" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content("~/Content/image/banner_13.jpg")" class="d-block w-10de0 img-thumbnail" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content("~/Content/image/banner_11.jpg")" class="d-block w-100 img-thumbnail" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
}



@{
    foreach (var item in Model)
    {
        <div class="card content" style="width: 20rem;">
            <img src="@Url.Content("~/Content/image/"+item.image)" class="card-img-top img-fluid rounded" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.districtName</h5>
                <p class="card-text">@item.details</p>
                <a href="@Url.Action("ShowHouseAndImageByDistrict","House",new {@districtID = item.districtID})" class="btn button-content">Xem thêm</a>
            </div>
        </div>

    }
}

