@model FullHouseWebsite.Models.District_Area

<link href="~/Content/mycss/cssBootstrap.css" rel="stylesheet" />
<!-- Bootstrap CSS -->
<link href="~/Content/mycss/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">







<div class="collapse navbar-collapse" id="navbarSupportedContent">
    @using (Html.BeginForm("SearchResult", "Search", FormMethod.Post, new { @class = "form-beginform" }))
    {

       
    <div class="navbar-center-li">
        <div class="link-magic1">
            aaaaaaaaa
        </div>
        <ul class="navbar-nav mr-auto">
            <div class="form-group">
                @if (ViewBag.DistrictList != null)
                {
                    @Html.DropDownListFor(n => n.districtID, ViewBag.DistrictList as SelectList, "Quận", new { @class = "form-control dropdown-quan" })
                }


            </div>
            <div class="link-magic">
                <a class="nav-link" href="#"></a>
            </div>
            <div class="form-group">


                @Html.DropDownListFor(n => n.areaID, new SelectList(""), "Phường", new { @class = "form-control dropdown-phuong" })


            </div>
            <div class="link-magic1">
                aaaaaaaaa
            </div>
            <form class="form-inline my-2 my-lg-0 move-form">
                @Html.TextBox("txtSearchPriceFrom", TempData["priceForm"], htmlAttributes: new { @class = "form-control mr-sm-2 move-input", @type = "number", @placeholder = "Gía từ", @min = "0" })

                @Html.TextBox("txtSearchPriceTo", TempData["PriceTo"], htmlAttributes: new { @class = "form-control mr-sm-2 move-input", @type = "number", @placeholder = "Đến", @min = "0" })
                <button class="btn my-2 my-sm-0 search-button" type="submit"><i class="fas fa-search search-button-character"></i>Tìm kiếm</button>
            </form>
        </ul>

    </div>
      
    }

</div>






<style>
    form.form-beginform {
        width: 970px !important;
        
    }
    select.dropdown-quan {
        display: inline-block;
        margin-left: 80px !important;
        width: 120px !important;
    }
    select.dropdown-phuong {
        display: inline-block;
        margin-left: 20px !important;
        
    }
    .move-form {
        display: inline-block;

       
    }
    .move-input {
        width: 200px !important;
        display: inline-block;
        margin-left: 30px !important;
        margin-top: 12px !important;
    }
    button.btn {
        display: inline-block;
        margin-top: 10px !important;
        margin-left: 30px !important;
    }
    ul.navbar-nav{
        width: 1000px !important;
    }
    

</style>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/myScipts/popper.min.js"></script>
<script src="~/Scripts/myScipts/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $("#districtID").change(function () {
            $.get("/House/GetAreaList", { districtID: $("#districtID").val() }, function (data) {
                $("#areaID").empty();
                $.each(data, function (index, row) {
                    $("#areaID").append("<option value='" + row.areaID + "'>" + row.areaName + "</option>")
                });
            });
        })
    });
</script>
