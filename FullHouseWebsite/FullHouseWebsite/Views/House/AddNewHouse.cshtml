@using FullHouseWebsite.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Add new house</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap core CSS     -->
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="~/Content/assets/css/animate.min.css" rel="stylesheet" />

    <!--  Light Bootstrap Table core CSS    -->
    <link href="~/Content/assets/css/light-bootstrap-dashboard.css" rel="stylesheet" />

    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="~/Content/assets/css/demo.css" rel="stylesheet" />

    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="~/Content/assets/css/pe-icon-7-stroke.css" rel="stylesheet" />
</head>
<body>
    @{
        tbl_Admin admin = (tbl_Admin)Session["Admin"];
    }
    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="assets/img/sidebar-5.jpg">

            <!--   you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple" -->


            <div class="sidebar-wrapper bg-sidebar">
                <div class="logo">
                    <a href="/Home" class="simple-text">
                        Full house
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="/Login/EditAdmin">
                            <i class="pe-7s-user"></i>
                            <p>@admin.fullname</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="/Login/GetListHouseByAdmin">
                            <i class="pe-7s-note2"></i>
                            <p>Quản lí nhà</p>
                        </a>
                    </li>
                    <li>
                        <a href="/Login/GetRequestByUser">
                            <i class="pe-7s-bell"></i>
                            <p>Yêu cầu thuê nhà</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Quản lí nhà</a>
                    </div>
                    <div class="collapse navbar-collapse">

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="@Url.Action("Index", "Home")" class="color-topnav">
                                    <p>Trang chủ</p>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Logout", "Login")" class="color-topnav">
                                    <p>Đăng xuất</p>
                                </a>
                            </li>
                            <li class="separator hidden-lg hidden-md"></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Thêm mới nhà</h4>
                                </div>
                                <div class="content">
                                    <form method="post" action="/House/AddNewHouse">
                                        <div class="row">
                                            <div class="col-md-5">
                                                <div class="form-group">
                                                    <label>Email của chủ nhà</label>
                                                    <input type="text" class="form-control" disabled placeholder="Email" value="@admin.emailAdmin">
                                                    <input type="hidden" name="txtEmailAdmin" value="@admin.emailAdmin" />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-5">
                                                <div class="form-group">
                                                    <label>Giá cho thuê</label>
                                                    <input type="number" class="form-control" placeholder="Giá tiền" min="1" name="txtPrice">
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label>Số phòng</label>
                                                    <input type="number" class="form-control" placeholder="Số phòng" min="0" name="txtRoomNumber">
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label>Diện tích</label>
                                                    <input type="number" class="form-control" placeholder="Diện tích" min="1" name="txtAcreage">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Số lầu</label>
                                                    <input type="number" class="form-control" placeholder="Sô lầu" min="0" name="txtFloor">
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Số Nhà</label>
                                                    <input type="text" class="form-control" placeholder="Số nhà" name="txtHouseNumber" required>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Tên đường</label>
                                                    <input type="text" class="form-control" placeholder="Tên Đường" name="txtHouseStreet" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            @Html.Action("GetAllDistrictForAddNewPartial", "House")
                                        </div>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Nội thất</label>
                                                    <input type="checkbox" name="cbFurniture">
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Đang dược thuê</label>
                                                    <input type="checkbox" name="cbRentStatus">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Mô tả khác</label>
                                                    <textarea rows="5" class="form-control" placeholder="Mô tả khác" name="txtOrderDetails"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="header">
                                                <h4 class="title">Hình ảnh</h4>
                                            </div>
                                            <div class="content table-responsive table-full-width">
                                                <table class="table table-hover table-striped">
                                                    <tbody>
                                                        <tr>
                                                            <td>1</td>
                                                            <td><input type="file" name="Image1" required></td>
                                                        </tr>
                                                        <tr>
                                                            <td>2</td>
                                                            <td><input type="file" name="Image2" required></td>
                                                        </tr>
                                                        <tr>
                                                            <td>3</td>
                                                            <td><input type="file" name="Image3" required></td>
                                                        </tr>
                                                    </tbody>
                                                </table>

                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-info btn-fill pull-right update-info-button">Thêm mới</button>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card card-user">
                                <div class="image">
                                 
                                    <img src="~/Content/image/background-admin.jpg" alt="..." />
                                </div>
                                <div class="content">
                                    <div class="author">
                                        <a href="#">
                                            <img class="avatar border-gray" src="~/Content/image/image-admin.jpg" alt="..." />
                                            <h4 class="title">
                                                @admin.fullname<br />
                                                <small>@admin.emailAdmin</small>
                                            </h4>
                                        </a>
                                    </div>
                                </div>
                                <hr>
                                <div class="text-center">
                                    <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                                    <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
                                    <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .update-info-button {
            background-color: #4fbfa8 !important;
            border: #4fbfa8 !important;
        }

            .update-info-button:hover {
                background-color: #41b39c !important;
                border: #41b39c !important;
            }

        .bg-sidebar {
            background-color: #41b39c !important;
            border: #41b39c !important;
        }

        .color-topnav:hover {
            color: #41b39c !important;
        }
    </style>
    <!--   Core JS Files   -->
    <script src="~/Content/assets/js/jquery.3.2.1.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/js/bootstrap.min.js" type="text/javascript"></script>

    <!--  Charts Plugin -->
    <script src="~/Content/assets/js/chartist.min.js"></script>

    <!--  Notifications Plugin    -->
    <script src="~/Content/assets/js/bootstrap-notify.js"></script>

    <!--  Google Maps Plugin    -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>

    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
    <script src="~/Content/assets/js/light-bootstrap-dashboard.js"></script>

    <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
    <script src="~/Content/assets/js/demo.js"></script>
</body>

</html>
